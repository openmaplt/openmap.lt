{
  "version": 8,
  "name": "openmap.lt",
  "metadata": { "maputnik:renderer": "mbgljs" },
  "sources": {
    "orto": {
      "type": "raster",
      "attribution": "© NŽT ORT10LT",
      "tiles": ["https://ort10lt.openmap.lt/g16/{z}/{x}/{y}.jpeg"],
      "tileSize": 256
    },
    "osm": {
      "type": "vector",
      "url": "https://openmap.lt/capabilities/all.json"
    },
    "bicycle": {
      "type": "vector",
      "url": "https://openmap.lt/capabilities/bicycle.json"
    }
  },
  "sprite": "https://openmap.lt/sprites/openmaplt",
  "glyphs": "https://openmap.lt/glyphs/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "overlay",
      "type": "raster",
      "source": "orto",
      "minzoom": 0,
      "maxzoom": 20,
      "layout": { "visibility": "visible" }
    },
    {
      "id": "boundary-country",
      "type": "line",
      "source": "osm",
      "source-layer": "boundaries",
      "minzoom": 0,
      "maxzoom": 20,
      "filter": ["all", ["==", "kind", "country"]],
      "layout": { "line-cap": "butt", "line-join": "bevel" },
      "paint": {
        "line-color": "rgba(204, 98, 98, 1)",
        "line-width": 1,
        "line-translate-anchor": "map"
      }
    },
    {
      "id": "road",
      "type": "line",
      "source": "osm",
      "source-layer": "roads",
      "minzoom": 8,
      "filter": [
        "any",
        [
          "in",
          "kind",
          "residential",
          "unclassified",
          "living_street",
          "service"
        ],
        [
          "in",
          "kind",
          "trunk",
          "trunk_link",
          "primary",
          "primary_link",
          "secondary",
          "secondary_link",
          "tertiary",
          "tertiary_link"
        ]
      ],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "#c0c4c2",
        "line-width": { "base": 1.55, "stops": [[4, 0.25], [20, 30]] },
        "line-opacity": 0.5
      }
    },
    {
      "id": "road-oneway",
      "type": "line",
      "source": "osm",
      "source-layer": "roads",
      "minzoom": 8,
      "filter": [
        "all",
        [
          "in",
          "kind",
          "residential",
          "unclassified",
          "living_street",
          "service",
          "tertiary",
          "tertiary_link",
          "secondary",
          "secondary_link",
          "primary",
          "primary_link",
          "trunk",
          "trunk_link",
          "motorway",
          "motorway_link"
        ],
        ["==", "oneway", "yes"]
      ],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-width": { "base": 1.55, "stops": [[4, 0.25], [20, 30]] },
        "line-opacity": 0.5,
        "line-pattern": "oneway"
      }
    },
    {
      "id": "link-bridge",
      "type": "line",
      "source": "osm",
      "source-layer": "roads",
      "filter": ["any", ["==", "is_link", "yes"], ["==", "is_bridge", "yes"]],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "#c0c4c2",
        "line-width": { "base": 1.55, "stops": [[4, 0.5], [8, 1.5], [20, 40]] },
        "line-opacity": 0.5
      }
    },
    {
      "id": "highway",
      "type": "line",
      "source": "osm",
      "source-layer": "roads",
      "filter": ["all", ["in", "kind", "motorway", "trunk"]],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "#5d6765",
        "line-width": { "base": 1.55, "stops": [[4, 1], [8, 2], [20, 40]] },
        "line-opacity": 0.5
      }
    },
    {
      "id": "path",
      "type": "line",
      "source": "osm",
      "source-layer": "roads",
      "minzoom": 12,
      "maxzoom": 24,
      "filter": ["all", ["in", "kind", "path", "footway", "track"]],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "#5d6765",
        "line-width": { "base": 1.8, "stops": [[10, 0.15], [20, 15]] },
        "line-dasharray": [2, 2],
        "line-opacity": 0.7
      }
    },
    {
      "id": "bicycle-yes",
      "type": "line",
      "source": "bicycle",
      "source-layer": "bicycle",
      "minzoom": 11,
      "maxzoom": 24,
      "filter": ["all", ["==", "kind", "yes"]],
      "layout": { "line-join": "round", "line-cap": "square" },
      "paint": {
        "line-color": "rgba(204, 122, 50, 0.8)",
        "line-width": { "stops": [[12, 2], [14, 5]] },
        "line-dasharray": [1, 2]
      }
    },
    {
      "id": "bicycle-lane",
      "type": "line",
      "source": "bicycle",
      "source-layer": "bicycle",
      "minzoom": 11,
      "maxzoom": 24,
      "filter": ["all", ["==", "kind", "lane"]],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "rgba(230, 0, 18, 0.8)",
        "line-width": { "stops": [[12, 2], [14, 5]] }
      }
    },
    {
      "id": "bicycle-track",
      "type": "line",
      "source": "bicycle",
      "source-layer": "bicycle",
      "minzoom": 11,
      "maxzoom": 24,
      "filter": ["all", ["==", "kind", "track"]],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "rgba(38, 0, 255, 0.8)",
        "line-width": { "stops": [[12, 2], [14, 5]] }
      }
    },
    {
      "id": "bicycle-cycleway",
      "type": "line",
      "source": "bicycle",
      "source-layer": "bicycle",
      "minzoom": 11,
      "maxzoom": 24,
      "filter": ["all", ["==", "kind", "cycleway"]],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "rgba(71, 179, 50, 0.8)",
        "line-width": { "stops": [[12, 2], [14, 5]] }
      }
    },
    {
      "id": "bicycle-routes",
      "type": "line",
      "source": "bicycle",
      "source-layer": "bicycle",
      "minzoom": 9,
      "maxzoom": 24,
      "filter": [
        "all",
        ["==", "kind", "bicycle"],
        ["==", "network", "lcn"],
        ["!=", "name", "Vilniaus dviračių trasos"]
      ],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "rgba(250, 51, 255, 0.5)",
        "line-width": { "stops": [[10, 3], [14, 5]] }
      }
    },
    {
      "id": "bicycle-routes-mtb",
      "type": "line",
      "source": "bicycle",
      "source-layer": "bicycle",
      "minzoom": 9,
      "maxzoom": 24,
      "filter": ["all", ["==", "kind", "mtb"]],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "rgba(255, 135, 51, 0.6)",
        "line-width": { "stops": [[10, 3], [14, 5]] }
      }
    },
    {
      "id": "label-other",
      "type": "symbol",
      "source": "osm",
      "source-layer": "places",
      "minzoom": 12,
      "filter": [
        "all",
        ["==", "$type", "Point"],
        ["in", "kind", "neighbourhood", "hamlet", "suburb"]
      ],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Roboto Regular"],
        "text-max-width": 10,
        "text-size": { "stops": [[12, 12], [20, 11]] },
        "icon-allow-overlap": false
      },
      "paint": {
        "text-color": "#cb4b49",
        "text-halo-color": "rgba(255,255,255,0.5)"
      }
    },
    {
      "id": "label-water-poly",
      "type": "symbol",
      "source": "osm",
      "source-layer": "places",
      "minzoom": 10,
      "maxzoom": 20,
      "filter": ["all", ["==", "kind", "water"]],
      "layout": {
        "text-field": "{name}",
        "symbol-placement": "point",
        "text-rotation-alignment": "auto",
        "text-font": ["Roboto Condensed Italic"],
        "text-allow-overlap": false,
        "text-ignore-placement": false,
        "text-size": { "stops": [[6, 10], [20, 15]] },
        "visibility": "visible"
      },
      "paint": {
        "text-color": "rgba(51, 51, 255, 1)",
        "text-halo-width": 2,
        "text-halo-color": "rgba(200, 200, 200, 0.8)"
      }
    },
    {
      "id": "label-water",
      "type": "symbol",
      "source": "osm",
      "source-layer": "water",
      "minzoom": 8,
      "maxzoom": 20,
      "filter": ["all", ["==", "$type", "LineString"]],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Roboto Condensed Italic"],
        "symbol-placement": "line",
        "text-rotation-alignment": "auto",
        "text-size": 12
      },
      "paint": {
        "text-color": "rgba(51, 51, 255, 1)",
        "text-halo-width": 2,
        "text-halo-color": "rgba(255, 255, 255, 0.6)"
      }
    },
    {
      "id": "label-road",
      "type": "symbol",
      "source": "osm",
      "source-layer": "roads",
      "minzoom": 10,
      "maxzoom": 20,
      "layout": {
        "text-field": "{name}",
        "text-font": ["Roboto Regular"],
        "symbol-placement": "line",
        "text-rotation-alignment": "auto",
        "text-size": { "stops": [[10, 8], [20, 16]] },
        "visibility": "visible"
      },
      "paint": {
        "text-color": "rgba(0, 0, 0, 1)",
        "text-halo-width": 2,
        "text-halo-color": "rgba(255, 255, 255, 0.7)"
      }
    },
    {
      "id": "label-city",
      "type": "symbol",
      "source": "osm",
      "source-layer": "places",
      "minzoom": 10,
      "maxzoom": 14,
      "filter": [
        "all",
        ["==", "$type", "Point"],
        ["in", "kind", "city", "county", "district", "town", "village"]
      ],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Roboto Medium"],
        "text-max-width": 10,
        "text-letter-spacing": 0.1,
        "text-size": 18,
        "visibility": "visible",
        "text-allow-overlap": false
      },
      "paint": {
        "text-color": "rgba(30, 30, 30, 1)",
        "text-halo-color": "rgba(220, 220, 220, 0.7)",
        "text-halo-width": 3
      }
    },
    {
      "id": "label-amenity",
      "type": "symbol",
      "source": "osm",
      "source-layer": "poi",
      "minzoom": 14,
      "maxzoom": 20,
      "filter": [
        "all",
        [
          "in",
          "kind",
          "attraction",
          "bar",
          "beer",
          "bicycle",
          "cafe",
          "fast_food",
          "fuel",
          "hillfort",
          "information",
          "museum",
          "park",
          "bicycle_parking",
          "picnic_site",
          "restaurant",
          "shelter",
          "compressed_air",
          "bicycle_rent",
          "sushi",
          "tumulus",
          "viewpoint",
          "zoo"
        ]
      ],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Roboto Regular"],
        "symbol-placement": "point",
        "text-rotation-alignment": "auto",
        "text-size": 11,
        "text-max-width": 9,
        "text-anchor": "top",
        "text-offset": [0, 0.8],
        "icon-image": "{kind}"
      },
      "paint": {
        "text-color": "rgba(20, 20, 20, 1)",
        "text-halo-width": 2,
        "text-halo-color": "rgba(255, 255, 255, 0.7)"
      }
    }
  ],
  "id": "hybrid-style"
}
